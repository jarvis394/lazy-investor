generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pulse {
  id                        Int      @id @default(autoincrement())
  telegramId                Int      @unique(sort: Desc)
  share                     String
  shareTag                  String?
  goal                      String
  potentialPercentage       String
  parsedPotentialPercentage Int?
  timestamp                 DateTime
  investmentSuccessTime     String?
  buttonUrl                 String
  buttonText                String
}

model Scraper {
  name                   String @id @default("main")
  minProcessedTelegramId Int    @default(-1)
  maxProcessedTelegramId Int    @default(-1)
}
